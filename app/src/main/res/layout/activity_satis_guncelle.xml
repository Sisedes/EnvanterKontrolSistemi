<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E9F1"
    tools:context=".SatisBilgi.SatisGuncelle">
    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="SATIŞ GÜNCELLE"
        android:textColor="#719B7E"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_musteri_id"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/bg_tv2"
        android:ems="10"
        android:drawableLeft="@drawable/icon_bos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_satis_id"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/bg_tv2"
        android:ems="10"
        android:drawableLeft="@drawable/icon_bos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_urun_id"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/bg_tv2"
        android:ems="10"
        android:drawableLeft="@drawable/icon_bos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_adet"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="364dp"
        android:background="@drawable/bg_tv2"
        android:drawableLeft="@drawable/icon_bos"
        android:ems="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_satisguncelle"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_marginTop="464dp"
        android:background="@drawable/bg_btn_satislar"
        android:textColor="@color/white"
        android:text="Güncelle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Müşteri ID"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_musteri_id"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="4dp"
        android:text="Satış ID"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_satis_id"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Urun ID"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_urun_id"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Adet"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_adet"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:text="Alış Şekli"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_alissekli"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_alissekli"
        android:layout_width="169dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/bg_tv2"
        android:drawableLeft="@drawable/icon_bos"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/et_adet"
        app:layout_constraintTop_toBottomOf="@+id/et_urun_id" />
</androidx.constraintlayout.widget.ConstraintLayout>